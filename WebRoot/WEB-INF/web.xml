<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee"  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <welcome-file-list>
    <welcome-file>site/logReg/user.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>SetChartEncoding</filter-name>
    <filter-class>com.util.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SetChartEncoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>user</servlet-name>
    <servlet-class>com.controller.user_servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>catalog</servlet-name>
    <servlet-class>com.controller.catalog_servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>catalog</servlet-name>
    <url-pattern>/catalog</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>goods</servlet-name>
    <servlet-class>com.controller.goods_servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>goods</servlet-name>
    <url-pattern>/goods</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>buy</servlet-name>
    <servlet-class>com.controller.buy_servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>buy</servlet-name>
    <url-pattern>/buy</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>order</servlet-name>
    <servlet-class>com.controller.order_servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>order</servlet-name>
    <url-pattern>/order</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>leaveMsg</servlet-name>
    <servlet-class>com.controller.leaveMsg_servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>leaveMsg</servlet-name>
    <url-pattern>/leaveMsg</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>credit</servlet-name>
    <servlet-class>com.controller.credit_servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>credit</servlet-name>
    <url-pattern>/credit</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>staff</servlet-name>
    <servlet-class>com.controller.staff_servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>staff</servlet-name>
    <url-pattern>/staff</url-pattern>
  </servlet-mapping>
</web-app>